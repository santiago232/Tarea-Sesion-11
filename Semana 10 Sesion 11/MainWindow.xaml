<Window x:Class="Session11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Session11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Content="Numero 1"></Label>
            <TextBox Width="100" LostFocus="TextBox_LostFocus" Height="30" Text="{Binding Path=Num1, Mode=TwoWay}"></TextBox>
            <Label Content="Numero 2"></Label>
            <TextBox Width="100" Height="30" Text="{Binding Path=Num2, Mode=TwoWay}"></TextBox>
            <Label Content="Resultado"></Label>
            <TextBox Width="100" Height="30" Text="{Binding Path=Resultado, Mode=TwoWay}"></TextBox>
            <Button Content="Abrir Lista de Juegos" Click="Button_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
